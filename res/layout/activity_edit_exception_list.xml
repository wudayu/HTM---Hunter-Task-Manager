<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/activatedBackgroundIndicator"
    tools:context=".EditExceptionListActivity" >

    <!--
    	this TextView is on the top of the edit exception list
    	activity
    -->

	<TextView
	    android:id="@+id/txt_hint_activity_edit_exception_list"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/txt_hint_activity_edit_exception_list"
	    style="@style/ActivityTopHintTextTheme" />

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:baselineAligned="false"
	    android:orientation="vertical"
	    android:layout_below="@id/txt_hint_activity_edit_exception_list" >
		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:layout_margin="2dp" >
			<TextView
			    android:id="@+id/txt_baseapp_exception_list_activity_edit_exception_list"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="@string/txt_baseapp_exception_list_activity_edit_exception_list"
			    style="@style/ActivityImportantTextTheme" />
	
			<ListView
		        android:id="@+id/lv_baseapp_exception_list_activity_edit_exception_list"
		        android:layout_below="@id/txt_baseapp_exception_list_activity_edit_exception_list"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:background="@drawable/exception_list_view_border" />
		</RelativeLayout>

		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:layout_margin="2dp" >
			<TextView
			    android:id="@+id/txt_service_exception_list_activity_edit_exception_list"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="@string/txt_service_exception_list_activity_edit_exception_list"
			    style="@style/ActivityImportantTextTheme" />

			<ListView
		        android:id="@+id/lv_service_exception_list_activity_edit_exception_list"
		        android:layout_below="@id/txt_service_exception_list_activity_edit_exception_list"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:background="@drawable/exception_list_view_border" />
		</RelativeLayout>
	</LinearLayout>

</RelativeLayout>