<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:layout_margin="2dp"
    tools:context=".SyssysappsActivity" >

	<!--
    	this TextView is on the top of the apps activity
    -->

	<TextView
	    android:id="@+id/txt_hint_activity_sysapps"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/txt_hint_activity_sysapps"
	    style="@style/ActivityTopHintTextTheme" />

    <!--
    	this RelativeLayout is on the top of the sysapps activity
    	it controls the 'all pick', sorting by name, sorting
    	by mem and sorting by data.
    -->
    <RelativeLayout
        android:id="@+id/relative_layout_top_activity_sysapps"
        android:layout_below="@id/txt_hint_activity_sysapps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!--
        	this CheckBox is used to set all the sysapps'
        	checkbox into true, or you can say
        	pick all the sysapps
        -->
		<CheckBox
		    android:id="@+id/chk_sysappslist_activity_sysapps"
		    android:layout_width="32dp"
		    android:layout_height="32dp"
		    android:layout_centerVertical="true"
		    android:layout_alignParentLeft="true"
		    android:checked="false"
		    android:button="@null"
		    android:layout_margin="4dp"
		    android:background="@drawable/checkbox_selector" />

		<!--
			this TextView is used to sort the sysapps
			by their sysapps names
		-->
		<TextView
		    android:id="@+id/txt_sysappsnames_activity_sysapps"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/txt_sysappsnames_activity_sysapps"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/chk_sysappslist_activity_sysapps"
			android:layout_marginLeft="54dp"
		    style="@style/ActivityImportantTextTheme" />

		<!--
			this TextView is used to sort the sysapps
			by their mem
		-->
		<TextView
		    android:id="@+id/txt_sysappsmems_activity_sysapps"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/txt_sysappsmems_activity_sysapps"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="5dp"
		    style="@style/ActivityImportantTextTheme" />

    </RelativeLayout>

    <!--
    	this RelativeLayout is on the bottom of sysapps activity
    	it contains three buttons, these buttons used to kill
    	sysapps or refresh the list
	-->
    <RelativeLayout
        android:id="@+id/relative_layout_bottom_activity_sysapps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <!--
        	this button used to refresh the list
		-->
        <Button
            android:id="@+id/btn_refresh_activity_sysapps"
            style="@style/ActivityNormalButtonTheme"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_refresh_activity_sysapps"
            android:layout_alignParentLeft="true" />

        <!--
        	this button used to kill one or more sysapps
		-->
        <Button
            android:id="@+id/btn_kill_activity_sysapps"
            style="@style/ActivityNormalButtonTheme"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_kill_activity_sysapps"
            android:layout_centerHorizontal="true" />

        <!--
        	this button used to kill all sysapps directly
		-->
        <Button
            android:id="@+id/btn_kill_all_activity_sysapps"
            style="@style/ActivityNormalButtonTheme"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_kill_all_activity_sysapps"
            android:layout_alignParentRight="true" />
        
    </RelativeLayout>

    <!--
    	this ListView used to display all the running sysapps
    	you can deal with each item by long press them,
    	after that, a context menu will pop up
	-->
    <ListView
        android:id="@+id/lv_sysapps_activity_sysapps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/relative_layout_bottom_activity_sysapps"
        android:layout_below="@id/relative_layout_top_activity_sysapps"
        style="@android:style/Widget.ListView" />

</RelativeLayout>